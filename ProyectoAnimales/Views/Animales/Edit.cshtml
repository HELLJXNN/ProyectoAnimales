@model ProyectoAnimales.Models.Animale

@{
    ViewData["Title"] = "Editar Animal"; // More descriptive title
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    @* Add container for better spacing and responsiveness *@
    <div class="card shadow-sm">
        @* Use a card for a clean, contained form *@
        <div class="card-header bg-primary text-white">
            @* Header with primary background and white text *@
            <h1 class="card-title text-center mb-0"><i class="bi bi-pencil-square"></i> Editar Animal</h1> @* Centered title with icon *@
        </div>
        <div class="card-body">
            <h4 class="card-subtitle mb-3 text-muted text-center">Modifica los datos del animal</h4> @* Subtitle for clarity *@
            <hr class="my-4" /> @* Horizontal rule for separation *@
            <div class="row justify-content-center">
                @* Center the form column *@
                <div class="col-md-6">
                    @* Adjust column width for better form layout *@
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div> @* Use Bootstrap alert for validation summary *@
                        <input type="hidden" asp-for="AnimalId" />

                        <div class="mb-3">
                            @* Use mb-3 for consistent margin-bottom for form groups *@
                            <label asp-for="Nombre" class="form-label"></label> @* Use form-label for Bootstrap 5 label style *@
                            <input asp-for="Nombre" class="form-control" /> @* form-control for input styling *@
                            <span asp-validation-for="Nombre" class="text-danger mt-1 d-block"></span> @* d-block to make validation message take full width *@
                        </div>
                        <div class="mb-3">
                            <label asp-for="Especie" class="form-label"></label>
                            <input asp-for="Especie" class="form-control" />
                            <span asp-validation-for="Especie" class="text-danger mt-1 d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Edad" class="form-label"></label>
                            <input asp-for="Edad" class="form-control" />
                            <span asp-validation-for="Edad" class="text-danger mt-1 d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PropietarioId" class="form-label"></label>
                            <select asp-for="PropietarioId" class="form-select" asp-items="ViewBag.PropietarioId"></select> @* form-select for select styling *@
                            <span asp-validation-for="PropietarioId" class="text-danger mt-1 d-block"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            @* Use d-grid and gap-2 for stacked buttons *@
                            <button type="submit" class="btn btn-success btn-lg">
                                @* Success button for save, larger size *@
                                <i class="bi bi-check-circle"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-footer text-center bg-light">
            @* Footer for card, light background *@
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                @* Outline button for back link *@
                <i class="bi bi-arrow-left-circle"></i> Volver a la Lista
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}