@model ProyectoAnimales.Models.Animale

@{
    ViewData["Title"] = "Detalles del Animal"; // More descriptive title
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    @* Add container for better spacing and responsiveness *@
    <div class="card shadow-sm">
        @* Use a card for a clean, contained display of details *@
        <div class="card-header bg-info text-white">
            @* Header with info background and white text for a soft look *@
            <h1 class="card-title text-center mb-0"><i class="bi bi-info-circle"></i> Detalles del Animal</h1> @* Centered title with icon *@
        </div>
        <div class="card-body">
            <h4 class="card-subtitle mb-3 text-muted text-center">Información completa de @Model.Nombre</h4> @* Subtitle for context *@
            <hr class="my-4" /> @* Horizontal rule for separation *@

            <dl class="row dl-horizontal">
                @* Use dl-horizontal for Bootstrap's description list styling *@
                <dt class="col-sm-3 text-end">
                    @* Align labels to the right for better readability *@
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt class="col-sm-3 text-end">
                    @Html.DisplayNameFor(model => model.Especie)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Especie)
                </dd>

                <dt class="col-sm-3 text-end">
                    @Html.DisplayNameFor(model => model.Edad)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Edad)
                </dd>

                <dt class="col-sm-3 text-end">
                    @Html.DisplayNameFor(model => model.Propietario)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Propietario.PropietarioId)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center bg-light d-flex justify-content-center gap-3">
            @* Footer for card, light background, centered buttons with gap *@
            <a asp-action="Edit" asp-route-id="@Model?.AnimalId" class="btn btn-warning btn-sm">
                @* Warning button for edit *@
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                @* Outline button for back link *@
                <i class="bi bi-arrow-left-circle"></i> Volver a la Lista
            </a>
        </div>
    </div>
</div>